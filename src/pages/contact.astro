---
import Layout from "@/layouts/Layout.astro";
import { Building, Headset, Mail } from "lucide-react";
import ContactForm from "@/sections/ContactForm";
---

<Layout title="Contact Us" description="Contact Us Page">
  <main
    class="bg-background flex flex-col p-4 mt-20 md:mt-40 max-w-6xl mx-auto w-full"
  >
    <section class="flex items-center justify-center">
      <div class="w-full max-w-6xl mx-auto rounded-lg overflow-hidden">
        <div class="grid md:grid-cols-2 gap-8 p-8">
          <!-- Columna izquierda - Información de contacto -->
          <div class="space-y-8">
            <div>
              <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
                Contact Us
              </h2>
              <p class="text-foreground mb-8 text-balance">
                Do you have any questions, ideas, or projects in mind? Contact
                us! Fill out the form, and our team will get back to you as soon
                as possible. We’re here to assist you.
              </p>
            </div>

            <div class="space-y-4">
              <div class="flex items-center justify-start space-x-4">
                <Building className="h-8 w-8 text-primary-600" />
                <span class="text-foreground"
                  >4044 Foothill Drive Provo, UT 84604 US</span
                >
              </div>

              <div class="flex items-center space-x-4">
                <Headset className="h-8 w-8 text-primary-600" />
                <span class="text-foreground">(888) 428-6329</span>
              </div>

              <div class="flex items-center space-x-4">
                <Mail className="h-8 w-8 text-primary-600" />
                <span class="text-foreground">info@royalfastnsafe.com</span>
              </div>
            </div>
          </div>

          <!-- Columna derecha - Formulario de contacto -->
          <div>
            <ContactForm client:visible />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
