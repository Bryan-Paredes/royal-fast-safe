---
import Layout from "@/layouts/Layout.astro";
import { Building, Headset, Mail } from "lucide-react";
---

<Layout title="Contact Us" description="Contact Us Page">
  <section
    class="bg-dark-deeper min-h-screen flex items-center justify-center p-4 my-14 md:my-0"
  >
    <div
      class="w-full max-w-6xl mx-auto bg-gradient-to-br from-dark to-dark-deeper rounded-lg overflow-hidden shadow-2xl"
    >
      <div class="grid md:grid-cols-2 gap-8 p-8">
        <!-- Columna izquierda - Información de contacto -->
        <div class="space-y-8">
          <div>
            <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
              Contact Us
            </h2>
            <p class="text-foreground mb-8">
              Do you have any questions, ideas, or projects in mind? Contact us!
              Fill out the form, and our team will get back to you as soon as
              possible. We’re here to assist you.
            </p>
          </div>

          <div class="space-y-4">
            <div class="flex items-center justify-start space-x-4">
              <Building className="h-8 w-8 text-primary-600" />
              <span class="text-foreground">545 Mavis Island</span>
            </div>

            <div class="flex items-center space-x-4">
              <Headset className="h-8 w-8 text-primary-600" />
              <span class="text-foreground">+1 (555) 234-5678</span>
            </div>

            <div class="flex items-center space-x-4">
              <Mail className="h-8 w-8 text-primary-600" />
              <span class="text-foreground">hello@example.com</span>
            </div>
          </div>
        </div>

        <!-- Columna derecha - Formulario de contacto -->
        <div>
          <form class="space-y-6 md:space-y-4 my-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="first_name"
                  class="block text-sm font-medium text-foreground mb-2"
                  >First name</label
                >
                <input
                  type="text"
                  id="first_name"
                  name="first_name"
                  required
                  class="w-full px-4 py-3 bg-dark-deeper border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-foreground"
                />
              </div>
              <div>
                <label
                  for="last_name"
                  class="block text-sm font-medium text-foreground mb-2"
                  >Last name</label
                >
                <input
                  type="text"
                  id="last_name"
                  name="last_name"
                  required
                  class="w-full px-4 py-3 bg-dark-deeper border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-foreground"
                />
              </div>
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-foreground mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-dark-deeper border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-foreground"
              />
            </div>

            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-foreground mb-2"
                >Phone number</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 bg-dark-deeper border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-foreground"
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-foreground mb-2"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 bg-dark-deeper border border-gray-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-foreground"
              ></textarea>
            </div>

            <div class="flex justify-start">
              <button
                type="submit"
                class="px-6 py-3 bg-primary-500 hover:bg-primary-700 text-white font-medium rounded-xl transition-colors duration-300 cursor-pointer"
              >
                Send message
              </button>
            </div>
          </form>
        </div>
      </div>
