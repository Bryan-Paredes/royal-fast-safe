---
import Layout from "@/layouts/Layout.astro";
import { Building, Headset, Mail } from "lucide-react";
import ContactForm from "@/sections/ContactForm";
---

<!-- Schema.org ContactPage + Organization -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
      "@type": "Organization",
      "name": "Royal Fast and Safe",
      "url": "https://royalfastandsafe.com",
      "logo": "https://royalfastandsafe.com/og.jpg",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-(888)-428-6329",
        "contactType": "Customer Service",
        "areaServed": "US",
        "availableLanguage": ["English", "Spanish"]
      }
    },
    "description": "Contact page for Royal Fast and Safe, a company specializing in heavy and oversized load transportation in the USA."
  }
</script>

<Layout
  seo={{
    title: "Contact Us | Royal Fast & Safe Transport",
    description:
      "Have questions or need assistance? Contact Royal Fast & Safe customer support team for help with your transportation and logistics needs",
    ogTitle: "Contact Royal Fast & Safe | 24/7 Customer Support",
    ogDescription:
      "Get in touch with our customer service team for assistance with all your transportation and logistics inquiries",
    ogType: "website",
    ogUrl: "https://royalfastandsafe.com/contact",
    ogImage: "https://royalfastandsafe.com/og.jpg",
    twitterTitle: "Contact Royal Fast & Safe | 24/7 Customer Support",
    twitterDescription:
      "Get in touch with our customer service team for assistance with all your transportation and logistics inquiries",
    twitterImage: "https://royalfastandsafe.com/og.jpg",
  }}
>
  <main
    class="bg-background flex flex-col p-4 mt-36 md:mt-60 max-w-6xl mx-auto w-full border rounded-xl"
  >
    <section class="flex items-center justify-center">
      <div class="w-full max-w-6xl mx-auto rounded-lg overflow-hidden">
        <div class="grid md:grid-cols-2 gap-8 p-8">
          <!-- Columna izquierda - Información de contacto -->
          <div class="space-y-8">
            <div>
              <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
                Contact Us
              </h2>
              <p class="text-foreground mb-8 text-balance">
                Do you have any questions, ideas, or projects in mind? Contact
                us! Fill out the form, and our team will get back to you as soon
                as possible. We’re here to assist you.
              </p>
            </div>

            <div class="space-y-4">
              <div class="flex items-center justify-start space-x-4">
                <Building className="h-8 w-8 text-primary-600" />
                <span class="text-foreground"
                  >4044 Foothill Drive Provo, UT 84604 US</span
                >
              </div>

              <div class="flex items-center space-x-4">
                <Headset className="h-8 w-8 text-primary-600" />
                <span class="text-foreground">(888) 428-6329</span>
              </div>

              <div class="flex items-center space-x-4">
                <Mail className="h-8 w-8 text-primary-600" />
                <span class="text-foreground">info@royalfastnsafe.com</span>
              </div>
            </div>
          </div>

          <!-- Columna derecha - Formulario de contacto -->
          <div>
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
