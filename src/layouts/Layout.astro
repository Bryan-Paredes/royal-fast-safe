---
import "@/styles/global.css";
import Footer from "@/sections/Footer.astro";
import Nav from "@/sections/Nav.astro";
import SEO from "@/components/SEO.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
  lang: string;
  t: any;
  seo: {
    title: string;
    description: string;
    ogTitle?: string;
    ogDescription?: string;
    ogType?: string;
    ogUrl?: string;
    ogImage?: string;
    twitterTitle?: string;
    twitterDescription?: string;
    twitterImage?: string;
    canonicalURL?: string;
    royalKeywords?: string;
  };
}

const { lang, t, seo } = Astro.props;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: light)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/logoRoyal.ico" sizes="any" />
    <link rel="icon" href="/logoRoyal.ico" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <link rel="apple-icon" href="/logo.png" />
    <link rel="manifest" href="/manifest.json" />
    <SEO {...seo} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO FIX: Add hreflang tags for international SEO -->
