---
import "@/styles/global.css";
import NavBar from "@/sections/NavBar";
import Footer from "@/sections/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: light)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/logoRoyal.svg" sizes="any" />
    <link rel="icon" href="/logoRoyal.svg" type="image/svg+xml" />
    <link
      rel="icon"
      href="/logoRoyal.svg"
      media="(prefers-color-scheme: dark)"
      style="border-radius: 50%;"
    />
    <link rel="apple-touch-icon" href="/logoRoyal.svg" />

    <meta property="og:title" content="Website Royal Fast Safe" />
    <meta
      property="og:description"
      content="Royal Fast & Safe: Heavy and oversized haul solutions. Efficient, safe logistics for machinery and more. Fast and reliable!"
    />
    <meta property="og:image" content="/og.jpg" />
    <meta property="og:url" content="https://royalfastandsafe.com" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:site" content="@royal-fast-safe" />
    <meta property="twitter:creator" content="@royal-fast-safe" />
    <meta property="twitter:title" content="Website Royal Fast Safe" />
    <meta
      property="twitter:description"
      content="Royal Fast & Safe: Heavy and oversized haul solutions. Efficient, safe logistics for machinery and more. Fast and reliable!"
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <NavBar client:load />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    font-family:
      "ClashGrotesk",
      sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    scroll-behavior: smooth;
    box-sizing: border-box;
  }

  .container {
    max-width: 1280px;
    margin: 60px auto;
    width: 100%;
  }
  @font-face {
    font-family: "ClashGrotesk";
    src: url("/fonts/ClashGrotesk.woff2") format("woff2");
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }
</style>
