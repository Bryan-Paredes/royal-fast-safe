---
export interface Props {
  title: string;
  description: string;
  ogTitle?: string;
  ogDescription?: string;
  ogType?: string;
  ogUrl?: string;
  ogImage?: string;
  twitterTitle?: string;
  twitterDescription?: string;
  twitterImage?: string;
  canonicalURL?: string;
  royalKeywords?: string;
  // SEO FIX: Added new SEO properties
  author?: string;
  robots?: string;
  viewport?: string;
  themeColor?: string;
  msapplicationTileColor?: string;
}

const {
  title,
  description,
  ogTitle = title,
  ogDescription = description,
  ogType = "website",
  ogUrl = Astro.url,
  ogImage = "/og.jpg",
  twitterTitle = ogTitle,
  twitterDescription = ogDescription,
  twitterImage = ogImage,
  canonicalURL = Astro.url,
  royalKeywords = Astro.props.royalKeywords,
  // SEO FIX: Default values for new SEO properties
  author = "Royal Fast & Safe",
  robots = "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
  viewport = "width=device-width, initial-scale=1",
  themeColor = "#0f172a",
  msapplicationTileColor = "#0f172a",
} = Astro.props;

