---
import { TextGenerateEffect } from "@/components/ui/text-generate-effect";
import { InteractiveButton } from "@/components/ui/interactive-button";
import { ArrowDown } from "lucide-react";
import HeroSection from "@/components/Hero";
---

<header class="relative flex h-dvh w-full items-center justify-center">
  <main class="h-full w-full bg-cover bg-center pb-28 shadow-lg">
    <HeroSection client:load />
    <div
      class="absolute top-0 left-0 right-0 flex flex-col h-full w-full items-center justify-center p-4 gap-11 mx-auto my-auto max-w-4xl z-20"
    >
      <div class="flex flex-col items-center justify-center gap-10 text-center">
        <h1 class="">
          <TextGenerateEffect
            client:load
            words="Your Partner for Complex Logistics"
          />
        </h1>
      </div>
      <div class="flex items-center justify-center gap-5">
        <a href="/quote" class="dark:text-white">
          <InteractiveButton
            className="text-2xl uppercase dark:text-white font-medium"
          >
            Free Quote Now
          </InteractiveButton>
        </a>
      </div>
      <ArrowDown
        size={48}
        className="md:hidden text-primary-500 dark:text-primary-400 animate-bounce mt-20"
      />
    </div>
  </main>
</header>
