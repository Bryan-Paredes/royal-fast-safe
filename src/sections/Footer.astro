---
import { Building, Headset, Mail } from "lucide-react";
---

<footer
  class="flex-1 max-w-7xl w-full bg-transparent text-gray-400 dark:text-white py-12 px-4 mt-10 mx-auto"
>
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-2xl font-bold text-primary-500 mb-4">Royal Fast & Safe</h2>
    <div class="flex items-center justify-center gap-5">
      <p class="text-lg text-foreground">info@royalfastandsafe.com</p>
      <a href="/privacy" class="text-foreground hover:text-primary-500">
        Privacy Policy
      </a>
    </div>
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-5 mt-4"
    >
      <div class="flex items-center gap-2">
        <Building className="text-primary-600" />
        <span class="text-foreground"
          >4044 Foothill Drive Provo, UT 84604 US</span
        >
      </div>

      <div class="flex items-center gap-2">
        <Headset className="text-primary-600" />
        <span class="text-foreground">(888) 428-6329</span>
      </div>

      <div class="flex items-center gap-2">
        <Mail className="text-primary-600" />
        <span class="text-foreground">info@royalfastnsafe.com</span>
      </div>
    </div>
  </div>
  <hr class="border-t border-primary-500 my-10" />
  <div class="text-base text-center my-10 text-foreground">
    &copy; {new Date().getFullYear()} - All rights reserved.
  </div>
</footer>
